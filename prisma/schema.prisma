generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
  id String @id @default(nanoid())
  Name String 
  rooms Room[]
  rounds Round[]
  datas Data[]
}
model Room{
  id String @id @default(nanoid())
  Name String @unique
  users User[]
  rounds Round[]
  limit Int @default(5)
  socketId SocketId?
}
model Round{
  id String @id @default(nanoid())
  users User[]
  Room Room? @relation(fields: [roomId], references: [id])
  roomId String
  Data Data[]
  createdAt DateTime @default(now())
}
model Data {
  id      String  @id @default(nanoid())
  user    User?   @relation(fields: [userId], references: [id])
  userId  String?
  round   Round?  @relation(fields: [roundId], references: [id])
  roundId String?
  gameName String
  gamePlace String
  gameAnimal String
  gameThing String
  gameScore Int? @default(5)
}
model SocketId{
  id String @id @default(nanoid())
  room Room?  @relation(fields: [roomId], references: [id])
  roomId String? @unique
  array String[]
}